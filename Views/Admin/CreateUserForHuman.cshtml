
@model ApplicationRole
@{
    ViewData["Title"] = "Register";
}

<div class="container vh-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-4">
            <form asp-action="CreateUserHuman" asp-controller="Admin" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div class="form-floating mb-3">
                    <input name="Email" class="form-control" placeholder="name@example.com" required />    
                    <label name="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input name="Password" class="form-control" placeholder="P@ssword." required />
                    <label name="Password">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <select name="Role" asp-items="ViewBag.Roles" class="form-select" aria-required="true" required>
                        <option disabled selected>Select Role</option>
                    </select>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Register</button>
                <a class="w-100 btn btn-lg btn-primary" asp-area="" asp-controller="Admin" asp-action="IndexUser">Back</a>
            </form>
        </div>
    </div>
</div>