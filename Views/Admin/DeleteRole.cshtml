@using Microsoft.AspNetCore.Identity
@{
    Layout = "~/Views/Shared/_Layout_Admin_Page.cshtml";
}
@model ApplicationRole
@{
    ViewData["Title"] = "Delete Role";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <h2>Delete Role</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" aria-required="true" disabled/>
                <span asp-validation-for="Name" class="text-danger"> </span>
            </div>
            <button asp-controller="Admin" asp-action="DeleteRole" type="submit" class="btn btn-danger mt-2">Delete</button>
        </form>
    </div>
</div>