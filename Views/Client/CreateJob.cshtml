@{
    Layout = null;
}
@model Job
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Posting Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Job Posting Form</h2>
        <form asp-action="CreateJob" asp-controller="Client" enctype="multipart/form-data">
            <input value="@ViewBag.UserId" asp-for="UserId">
            <div class="form-group">
                <label asp-for="JobTitle">Job Title</label>
                <input type="text" class="form-control" asp-for="JobTitle" placeholder="Enter job title">
            </div>
            <div class="form-group">
                <label asp-for="Location">Location</label>
                <input type="text" class="form-control" asp-for="Location" placeholder="Enter location" required>
            </div>
            <div class="form-group">
                <label asp-for="Industry">Company</label>
                <input type="text" class="form-control" asp-for="Industry" placeholder="Enter industry" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Requiered1">Required Skill 1</label>
                    <input type="text" class="form-control" asp-for="Requiered1" placeholder="Enter required skill 1" required>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Requiered2">Required Skill 2</label>
                    <input type="text" class="form-control" asp-for="Requiered2" placeholder="Enter required skill 2" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="LowestPrice">Lowest Price</label>
                    <input type="number" class="form-control" asp-for="LowestPrice" placeholder="Enter lowest price" required>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="HighestPrice">Highest Price</label>
                    <input type="number" class="form-control" asp-for="HighestPrice" placeholder="Enter highest price" required>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter location" required>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDeadline">Application Deadline</label>
                <input type="date" class="form-control" asp-for="ApplicationDeadline" required>
            </div>
            <div class="form-group">
                <label asp-for="Avatar">Avatar</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="avatarInput" asp-for="Avatar" accept="image/*" required>
                        <label class="custom-file-label" for="avatarInput">Choose file</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="previewAvatar()">Preview</button>
                    </div>
                </div>
                <img id="avatarPreview" class="mt-2" style="display: none; max-width: 200px;">
            </div>
            <div class="form-group">
                <label>Avatar Path:</label>
                <span id="avatarPath"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Create</button>
        </form>
    </div>
    <script>
        function previewAvatar() {
            const input = document.getElementById('avatarInput');
            const preview = document.getElementById('avatarPreview');
            const pathElement = document.getElementById('avatarPath');
            const file = input.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
                // Cập nhật đường dẫn ảnh
                pathElement.textContent = file.name;
            }

            reader.readAsDataURL(file);
        }
    </script>
</body>
</html>
